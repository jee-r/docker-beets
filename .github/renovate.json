{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": ["beets"],
      "enabled": true,
      "versioning": "semver",
      "extractVersion": "^https://github.com/beetbox/beets/archive/refs/tags/(.*).tar.gz$",
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "all",
      "minor": {
        "automerge": false
      },
      "patch": {
        "automerge": true
      }
    }
  ],
   "regexManagers": [
    {
      "fileMatch": [
        "(^|/)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "matchStrings": [
        "#\\srenovate:\\sdatasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?( extractVersion=(?<extractVersion>.*?))?\\s(ENV|ARG) .*?_VERSION=(?<currentValue>.*)\\s"
      ]
    }
  ]
}
